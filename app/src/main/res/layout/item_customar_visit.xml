<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="5dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">>


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="5dp">
    <RelativeLayout

        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:ignore="MissingConstraints">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cIMAGEV"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_deposit_round"
            />

    </RelativeLayout>


    <TextView

        android:id="@+id/pNameV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="ProductName"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/image"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="7dp" />

    <TextView
        android:id="@+id/detailsV"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pName"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="hghfdsfgdsgfgdfhdgf hdsgfhdgffhdg hdg hdg "
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toBottomOf="@+id/pNameV" />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>