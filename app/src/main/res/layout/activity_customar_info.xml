<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CustomarInfo">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="70dp"
        app:cardElevation="5dp"
        android:layout_centerHorizontal="true"
        >
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:id="@+id/nameInfo"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Name:Zobaeir Al Nahid"
                />

            <TextView
                android:gravity="center"
                android:id="@+id/addressInfo"
                android:layout_below="@+id/mobileInfo"
                android:layout_marginTop="-5dp"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Address:Kushtia"
                />
            <TextView
                android:gravity="center"
                android:id="@+id/customar"
                android:layout_below="@+id/addressInfo"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Customar Info"
                android:textColor="#676767"
                android:textStyle="bold"
                android:textSize="16dp"
                />
            <ImageView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/more"
                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_below="@+id/card1"
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/mobileCVINFO"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="01762258297"
            android:textSize="20sp"
            android:gravity="center|left"
            />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:id="@+id/card3"
        android:layout_below="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:backgroundTint="@color/ic_attatch_background">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customar Details"
                android:textSize="20sp"
                android:gravity="center|left|top"
                />
            <ImageView
                android:id="@+id/expand"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_arrow_drop_down_24"

                />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/expandCard"
        android:visibility="gone"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_below="@+id/card3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address: England"
                android:layout_below="@+id/t1"
                android:textSize="15dp"
                android:gravity="center|left|top"
                />
            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: John Killer"
                android:textSize="15sp"
                android:gravity="center|left|top"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address: England"
                android:layout_below="@+id/t3"
                android:textSize="15dp"
                android:gravity="center|left|top"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/t3"
                android:layout_below="@id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: John Killer"
                android:textSize="15sp"
                android:gravity="center|left|top"
                />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        app:cardElevation="6dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="50dp"
        android:backgroundTint="@color/black">
        <ImageView
            android:id="@+id/pro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_attatch_round"
            />

    </androidx.cardview.widget.CardView>

</RelativeLayout>