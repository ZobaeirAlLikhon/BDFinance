<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Appoinment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="15dp"
                android:layout_marginLeft="21dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textField"
                android:layout_alignParentTop="@+id/name"
                android:layout_margin="21dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event Name Here"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                tools:ignore="MissingConstraints">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="-10dp"
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative1"
            >

            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:text="Mobile"
                android:textSize="15dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textField2"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_alignParentTop="@+id/mobile"
                android:layout_margin="21dp"
                android:hint="mobile"
                tools:ignore="MissingConstraints">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>
        <RelativeLayout

            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="-10dp"
            android:id="@+id/relative33"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/relative2"
            >

            <TextView
                android:id="@+id/addImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Date &amp; Time"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/imagename"
                android:background="@drawable/ractangular_shape"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Select Your Date and Time"
                android:layout_below="@+id/addImage"/>

            <ImageView
                android:background="@drawable/ractangular_shape"
                android:id="@+id/uploadeIM"
                android:scaleType="fitXY"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="-2dp"
                android:src="@drawable/ic_baseline_more_time_24" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:id="@+id/relative44"
            android:layout_below="@+id/relative33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:text="Message"
                android:textSize="15dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textField3"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_alignParentTop="@+id/address"
                android:layout_margin="21dp"
                android:hint="Message"
                android:textAlignment="textStart"
                tools:ignore="MissingConstraints">

                <EditText
                    android:layout_centerHorizontal="true"
                    android:gravity="start|top"
                    android:inputType="textMultiLine|textCapSentences"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>





        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/createVisitBT1"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="#878686"
            />

    </RelativeLayout>

</RelativeLayout>